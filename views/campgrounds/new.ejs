<% include ../partials/header %>

<!-- Form for new camp /-->

<div class="container">
  <div class="row">
    
    <h1 style="text-align: center;">Add New Campground</h1>
    <div style="width:30%; margin:25px auto;">
      
      <form action = "/campgrounds"  method = "POST">
        <div class="form-group">
          <input class="form-control" type= "text" name = "campName" placeholder = "camp name">
        </div>
        <div class="form-group">
          <input class="form-control" type= "number" name="price" placeholder="price" min="0.00" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type = "text" name = "image" placeholder = "link to image">
        </div>
        <div class="form-group">
          <input class="form-control" type = "text" name = "description" placeholder = "description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">submit</button>
        </div>
      </form>    
      <a href="/campgrounds" >Back to Campgrounds</a>
      
    </div>

    
  </div>
  
</div>

